<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/user_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                style="@style/subHeadFont"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phuengton"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="ดูและแก้ไขข้อมูลส่วนตัว" />

        </LinearLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_margin="10dp"
            android:src="@drawable/user"
            android:layout_width="70dp"
            android:layout_height="70dp" />

    </LinearLayout>

    <View
        android:layout_marginLeft="10dp"
        android:background="#F0F0F0"
        android:layout_width="match_parent"
        android:layout_height="1dp"></View>

    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/subHeadFont"
            android:text="ประวัติการส่งคำขอสมัครงาน"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <View
        android:layout_marginLeft="10dp"
        android:background="#F0F0F0"
        android:layout_width="match_parent"
        android:layout_height="1dp"></View>


    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/subHeadFont"
            android:text="รายการโปรด"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <View
        android:layout_marginLeft="10dp"
        android:background="#F0F0F0"
        android:layout_width="match_parent"
        android:layout_height="1dp"></View>

    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/subHeadFont"
            android:text="ประกาศที่ดูล่าสุด"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <View
        android:layout_marginLeft="10dp"
        android:background="#F0F0F0"
        android:layout_width="match_parent"
        android:layout_height="1dp"></View>

    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/subHeadFont"
            android:text="ช่วยเหลือ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <View
        android:layout_marginLeft="10dp"
        android:background="#F0F0F0"
        android:layout_width="match_parent"
        android:layout_height="1dp"></View>

    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:gravity="center"
            style="@style/subHeadFont"
            android:text="ออกจากระบบ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <View
        android:layout_marginLeft="10dp"
        android:background="#F0F0F0"
        android:layout_width="match_parent"
        android:layout_height="1dp"></View>


</LinearLayout>