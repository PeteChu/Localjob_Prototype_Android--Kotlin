<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.constraint.ConstraintLayout
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
        <ImageView

            android:src="@drawable/ic_arrow_back_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/category_btnback" />
        <TextView
            android:textColor="#000"
            android:text="Category"
            android:textSize="23sp"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintRight_toLeftOf="@+id/filter_category"
            android:layout_marginRight="8dp"
            app:layout_constraintLeft_toRightOf="@+id/category_btnback"
            android:layout_marginLeft="8dp" />
        <ImageView
            android:layout_gravity="center"
            android:src="@drawable/ic_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/filter_category" />
    </android.support.constraint.ConstraintLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.example.localjob.custom_view.ListJob
                android:layout_height="wrap_content"
                android:layout_width="match_parent"></com.example.localjob.custom_view.ListJob>
            <com.example.localjob.custom_view.ListJob
                android:layout_height="wrap_content"
                android:layout_width="match_parent"></com.example.localjob.custom_view.ListJob>
            <com.example.localjob.custom_view.ListJob
                android:layout_height="wrap_content"
                android:layout_width="match_parent"></com.example.localjob.custom_view.ListJob>
            <com.example.localjob.custom_view.ListJob
                android:layout_height="wrap_content"
                android:layout_width="match_parent"></com.example.localjob.custom_view.ListJob>
            <com.example.localjob.custom_view.ListJob
                android:layout_height="wrap_content"
                android:layout_width="match_parent"></com.example.localjob.custom_view.ListJob>
            <com.example.localjob.custom_view.ListJob
                android:layout_height="wrap_content"
                android:layout_width="match_parent"></com.example.localjob.custom_view.ListJob>
        </LinearLayout>
    </ScrollView>



</LinearLayout>