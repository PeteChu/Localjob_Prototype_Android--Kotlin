<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#10000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/search_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ค้นหา"
            android:inputType="text"
            android:maxLines="1"
            android:textSize="20dp"
            app:met_hideUnderline="true"
            app:met_textColor="@android:color/white"
            app:met_textColorHint="#80FFFFFF" />

        <TextView
            android:id="@+id/test_tag1"
            style="@style/subHeadFont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:text="ขับรถ"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/test_tag2"
            style="@style/subHeadFont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:text="พนักงานขาย"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/test_tag3"
            style="@style/subHeadFont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:text="รักษาความปลอดภัย"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/test_tag4"
            style="@style/subHeadFont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:text="นักดนตรี"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/test_tag5"
            style="@style/subHeadFont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:text="พนักงานเสริฟ"
            android:textColor="@android:color/white" />

    </LinearLayout>

</LinearLayout>